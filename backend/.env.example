# Server Configuration
PORT=3001
NODE_ENV=development

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Admin Password (hashed - use bcrypt to generate)
ADMIN_PASSWORD_HASH=$2b$10$yourhashedpasswordhere
# Default password: admin123

# JWT Secret
JWT_SECRET=your-random-secret-key-change-in-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Organization Default Info
ORG_NAME=Your Organization
ORG_EMAIL=donations@yourorg.com
ORG_ADDRESS=123 Main St, City, State 12345
ORG_TAX_ID=12-3456789

# Database
DB_PATH=./database/donations.db
